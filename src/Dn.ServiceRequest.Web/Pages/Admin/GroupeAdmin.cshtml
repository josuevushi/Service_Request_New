@page
@using Microsoft.AspNetCore.Authorization
@using Dn.ServiceRequest.Permissions
@model Dn.ServiceRequest.Web.Pages.Admin.GroupeAdminModel
@inject IAuthorizationService AuthorizationService
@{
    Layout = "Layouts/_HorizontalLayout";
    ViewData["Title"] = "Gestion des Groupes";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-bs5/datatables.bootstrap5.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/formvalidation/dist/css/formValidation.min.css" />
    <link rel="stylesheet" href="~/assets/vendor/libs/sweetalert2/sweetalert2.css" />
}

@section VendorScripts {
    <script src="~/assets/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
    <script src="~/assets/vendor/libs/formvalidation/dist/js/FormValidation.min.js"></script>
    <script src="~/assets/vendor/libs/formvalidation/dist/js/plugins/Bootstrap5.min.js"></script>
    <script src="~/assets/vendor/libs/formvalidation/dist/js/plugins/AutoFocus.min.js"></script>
    <script src="~/assets/vendor/libs/sweetalert2/sweetalert2.js"></script>
}

@section PageScripts {
    <script src="~/js/groupe-admin.js"></script>
}

<div class="row g-6">
    <div class="col-12">
        <div class="card">
            <div class="card-header border-bottom d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Liste des Groupes</h5>
                @if (await AuthorizationService.IsGrantedAsync(ServiceRequestPermissions.Groupes.Create))
                {
                    <button class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target="#createGroupeOffcanvas">
                        <i class="ti ti-plus me-1"></i> Ajouter un Groupe
                    </button>
                }
            </div>
            <div class="card-datatable table-responsive">
                <table id="groupeTable" class="table border-top">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var groupe in Model.Groupes)
                        {
                            <tr>
                                <td></td>
                                <td>@groupe.Id.ToString().Substring(0, 8)...</td>
                                <td>
                                    <span class="groupe-nom-@groupe.Id">@groupe.Nom</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (await AuthorizationService.IsGrantedAsync(ServiceRequestPermissions.Groupes.Update))
                                        {
                                            <a href="javascript:;" class="text-body edit-groupe-button" data-id="@groupe.Id" data-bs-toggle="offcanvas" data-bs-target="#editGroupeOffcanvas">
                                                <i class="ti ti-edit ti-sm me-2"></i>
                                            </a>
                                        }
                                        @if (await AuthorizationService.IsGrantedAsync(ServiceRequestPermissions.Groupes.Delete))
                                        {
                                            <form id="@groupe.Id-deleteForm" asp-page-handler="Delete" asp-route-id="@groupe.Id" method="post" style="display:none;"></form>
                                            <a href="javascript:;" class="text-body" onclick="showDeleteConfirmation('@groupe.Id', '@groupe.Nom')">
                                                <i class="ti ti-trash ti-sm"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Offcanvas to add new groupe -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="createGroupeOffcanvas" aria-labelledby="createGroupeOffcanvasLabel">
    <div class="offcanvas-header border-bottom">
        <h5 id="createGroupeOffcanvasLabel" class="offcanvas-title">Ajouter un Groupe</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body mx-0 flex-grow-0 p-6 h-100">
        <form id="createGroupeForm" class="pt-0" asp-page-handler="Create" method="post">
            <div class="mb-6">
                <label class="form-label" asp-for="NewGroupe.Nom">Nom</label>
                <input type="text" class="form-control" asp-for="NewGroupe.Nom" placeholder="Support Technique" />
            </div>
            <button type="submit" class="btn btn-primary me-sm-3 me-1 data-submit">Enregistrer</button>
            <button type="reset" class="btn btn-label-secondary" data-bs-dismiss="offcanvas">Annuler</button>
        </form>
    </div>
</div>

<!-- Offcanvas to edit groupe -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="editGroupeOffcanvas" aria-labelledby="editGroupeOffcanvasLabel">
    <div class="offcanvas-header border-bottom">
        <h5 id="editGroupeOffcanvasLabel" class="offcanvas-title">Modifier le Groupe</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body mx-0 flex-grow-0 p-6 h-100">
        <form id="editGroupeForm" class="pt-0" asp-page-handler="EditOrUpdate" method="post">
            <input type="hidden" asp-for="EditGroupeId" id="EditGroupeId" />
            <div class="mb-6">
                <label class="form-label" asp-for="Groupe.Nom">Nom</label>
                <input type="text" class="form-control" asp-for="Groupe.Nom" id="EditGroupe_Nom" placeholder="Support Technique" />
            </div>
            <button type="submit" class="btn btn-primary me-sm-3 me-1 data-submit">Mettre Ã  jour</button>
            <button type="reset" class="btn btn-label-secondary" data-bs-dismiss="offcanvas">Annuler</button>
        </form>
    </div>
</div>
